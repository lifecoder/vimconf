set nocompatible
syntax on
colorscheme vibrantink 
set showcmd
set showmode
filetype plugin indent on
set hlsearch
set incsearch
set smartcase
set number
set ruler
set laststatus=2

set smartindent
set shiftwidth=2
set softtabstop=2
set expandtab
set autoindent
set wildmode=list:longest
set wildmenu

autocmd FileType c setlocal shiftwidth=2 tabstop=2
autocmd FileType h setlocal shiftwidth=2 tabstop=2

